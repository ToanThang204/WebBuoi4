@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-orange fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                👋 Xin chào, @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-light text-orange fw-bold">
                    🚪 Đăng Xuất
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-light text-orange fw-bold" id="login" asp-area="Identity" asp-page="/Account/Login">
                🔑 Đăng nhập
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-light text-orange fw-bold" id="register" asp-area="Identity" asp-page="/Account/Register">
                ✨ Đăng ký
            </a>
        </li>
    }
</ul>

<style>
    .navbar-nav .nav-link {
        transition: all 0.3s ease-in-out;
    }

    .text-orange {
        color: #4F4F4F !important; /* Change to a darker beige for text */
    }

    .btn-outline-light:hover {
        background-color: #d2b48c !important; /* Darker beige for hover background */
        border-color: #d2b48c !important; /* Darker beige for hover border */
        color: white !important;
    }

    .btn-light {
        background-color: #f5f5dc !important; /* Light beige for button background */
        border-color: #d2b48c !important; /* Darker beige for button border */
    }

        .btn-light:hover {
            background-color: #d2b48c !important; /* Darker beige for hover background */
            color: white !important;
        }
</style>
