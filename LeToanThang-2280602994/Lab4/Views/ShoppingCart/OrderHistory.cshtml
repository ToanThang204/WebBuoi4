@model List<Order>

<h2 class="mb-4 text-center text-primary fw-bold">📜 Lịch Sử Đơn Hàng</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Mã Đơn</th>
                    <th>Ngày Đặt</th>
                    <th>Tổng Tiền</th>
                    <th>Trạng Thái</th>
                    <th>Chi Tiết</th>
                    <th>Hủy Đơn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.Id</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-danger fw-bold">@order.TotalPrice.ToString("N0") VNĐ</td>
                        <td>
                            <samp class=" badge bg-success">Đang xử lý</samp>
                        </td>
                        <td>
                            <a asp-controller="ShoppingCart" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">🔍 Xem</a>
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-center text-muted">Bạn chưa có đơn hàng nào.</p>
}

<div class="d-flex justify-content-center mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg fw-bold rounded-pill shadow-sm px-4">🏠 Về Trang Chủ</a>
</div>
