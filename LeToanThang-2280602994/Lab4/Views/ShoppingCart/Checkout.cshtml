@model Order

<h2 class="mb-4 text-primary fw-bold text-center">💳 Thanh Toán</h2>

<form asp-action="Checkout" method="post" class="card p-4 shadow-lg rounded-4 border-0 bg-light">
    <div class="mb-3">
        <label asp-for="ShippingAddress" class="form-label fw-bold">📍 Địa chỉ giao hàng</label>
        <input asp-for="ShippingAddress" class="form-control custom-input" placeholder="Nhập địa chỉ của bạn..." required />
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label fw-bold">📝 Ghi chú</label>
        <textarea asp-for="Notes" class="form-control custom-input" placeholder="Nhập ghi chú (nếu có)..." rows="3"></textarea>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" asp-controller="ShoppingCart" class="btn btn-outline-primary fw-bold">
            ⬅ Quay lại giỏ hàng
        </a>
        <button type="submit" class="btn btn-gradient fw-bold">
            ✅ Xác nhận đặt hàng
        </button>
    </div>
</form>

<style>
    .text-primary {
        color: #D70000 !important;
    }

    .text-gradient {
        background: linear-gradient(135deg, #D70000, #FF4500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .custom-input {
        border: 2px solid #D70000 !important;
        border-radius: 8px;
        padding: 10px;
        transition: all 0.3s;
    }

        .custom-input:focus {
            border-color: #B22222 !important;
            box-shadow: 0 0 10px rgba(215, 0, 0, 0.3);
        }

    .btn-gradient {
        background: linear-gradient(135deg, #D70000, #FF6347);
        color: white;
        border-radius: 25px;
        transition: all 0.3s;
        padding: 10px 20px;
        box-shadow: 0 4px 10px rgba(215, 0, 0, 0.5);
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #B22222, #FF4500);
            transform: scale(1.1);
            box-shadow: 0 6px 15px rgba(215, 0, 0, 0.7);
        }

    .shadow-lg {
        box-shadow: 0 12px 35px rgba(215, 0, 0, 0.3);
    }
</style>