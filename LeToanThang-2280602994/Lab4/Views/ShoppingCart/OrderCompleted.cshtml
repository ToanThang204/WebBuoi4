@model int

<div class="card p-5 shadow-lg text-center bg-light border-0 rounded-4">
    <h2 class="text-gradient fw-bold display-6">🎉 Chúc mừng bạn đã đặt hàng thành công 🎉</h2>
    <p class="mt-3 fs-5 text-muted">Cảm ơn bạn đã mua hàng! Đơn hàng của bạn đã được xác nhận.</p>

    <div class="border-gradient p-4 rounded-3 mb-4 shadow-sm">
        <p class="fw-bold mb-1 fs-5">📦 Mã đơn hàng:</p>
        <p class="text-gradient display-5 fw-bold">@Model</p>
    </div>

    <p class="fw-bold fs-5 text-muted">Chúng tôi sẽ sớm liên hệ để xác nhận đơn hàng.</p>

    <a asp-controller="Home" asp-action="Index" class="btn btn-gradient fw-bold px-5 py-2 fs-5 rounded-pill shadow">
        🛍 Tiếp tục mua sắm
    </a>
</div>

<style>
    .text-primary {
        color: #D70000 !important;
    }
    .text-gradient {
        background: linear-gradient(135deg, #D70000, #FF4500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .border-gradient {
        border: 2px solid;
        border-image: linear-gradient(135deg, #D70000, #FF4500) 1;
        background-color: #FFE5E5;
    }

    .btn-gradient {
        background: linear-gradient(135deg, #D70000, #FF6347);
        color: white;
        border: none;
        transition: all 0.3s;
        box-shadow: 0 4px 10px rgba(215, 0, 0, 0.5);
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #B22222, #FF4500);
            transform: scale(1.1);
            box-shadow: 0 6px 15px rgba(215, 0, 0, 0.7);
        }

    .shadow-lg {
        box-shadow: 0 12px 35px rgba(215, 0, 0, 0.3);
    }
</style>