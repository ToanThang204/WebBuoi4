@model IEnumerable<Lab4.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}



<div class="d-flex justify-content-between mb-3">
    <a asp-action="Add" class="btn btn-primary">ADD</a>
    <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">View Categories</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Category</th>
            <th>Image</th> <!-- Cột hiển thị hình ảnh -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.Category?.Name</td>

                <!-- Hiển thị ảnh đại diện -->
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Product Image" style="width: 100px; height: auto;" />
                    }
                </td>

                <td>
                    <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-info">View</a>
                    <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>