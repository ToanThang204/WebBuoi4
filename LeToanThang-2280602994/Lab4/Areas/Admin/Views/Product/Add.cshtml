@model Lab4.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 p-4">
        <h3 class="text-center text-primary fw-bold">🆕 Thêm Sản Phẩm Mới</h3>
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-bold">Tên sản phẩm</label>
                    <input asp-for="Name" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="Price" class="form-label fw-bold">Giá (VND)</label>
                    <input asp-for="Price" type="number" class="form-control" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="CategoryId" class="form-label fw-bold">Danh mục</label>
                    <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Hình ảnh sản phẩm</label>
                    <input type="file" name="imageUrl" class="form-control" required />
                </div>
                <div class="col-12">
                    <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-success px-4">✔️ Thêm</button>
                <a asp-action="Index" class="btn btn-secondary ms-3 px-4">❌ Hủy</a>
            </div>
        </form>
    </div>
</div>
